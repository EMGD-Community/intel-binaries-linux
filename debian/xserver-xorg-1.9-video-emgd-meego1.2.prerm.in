#!/bin/sh

set -e

THIS_PACKAGE=xserver-xorg-1.9-video-emgd-meego1.2
THIS_SCRIPT=prerm

case "$1" in
  remove)
  # Use alternatives to make it easier to switch between Mesa and 3rd party modules
  update-alternatives --remove ${DEB_HOST_MULTIARCH}_egl_conf /usr/lib/${DEB_HOST_MULTIARCH}/emgd/ld.so.conf

  # explicit ldconfig due to alternatives
  ldconfig

esac

#DEBHELPER#

exit 0
